config interface 'wwan'
	option proto 'dhcp'

config 'interface' 'stabridge'
	option 'proto' 'relay'
	option 'network' 'wwan'

config device 'lan_dev'
	option name 'eth0.1'
	option macaddr '76:43:1f:d1:24:16'

config interface 'wan'
	option ifname 'eth0.2'
	option proto 'dhcp'

config device 'wan_dev'
	option name 'eth0.2'
	option macaddr '76:43:1f:d1:24:17'

