#!/bin/sh -x
# /etc/init.d/config_secn-2

# This is the second part of config_secn which is run at the end of the start up sequence

# ------------------------------------------------------------------

# Test for the presence of the FXS daughter board
if grep -q 'DFXS initialized.....: yes' /proc/dragino2_si3217x 2>/dev/null; then
   uci set secn.asterisk.fxs_present="1"
else
   uci set secn.asterisk.fxs_present="0"
fi

# Enable Asterisk by default if FXS is present on first boot
if [ -f /etc/config/first-boot ]; then
   if grep -q 'DFXS initialized.....: yes' /proc/dragino2_si3217x 2>/dev/null; then
      uci set secn.asterisk.enable_ast="checked"
   else
      uci set secn.asterisk.enable_ast="0"
   fi
   rm -f /etc/config/first-boot   # Reset the first-boot indicator
fi

uci commit secn  # Save changes

# Enable Asterisk on boot up if required
ENABLE_AST=`uci get secn.asterisk.enable_ast`
if [ $ENABLE_AST = "checked" ]; then
    /etc/init.d/asterisk enable
else
    /etc/init.d/asterisk disable
fi

#---------------------------------------------

# Start or stop dnsmasq now and enable on boot up as required
DHCP_ENABLE=`uci get secn.dhcp.enable`
if [ $DHCP_ENABLE = "checked" ]; then

  # Enable start on boot
  /etc/init.d/dnsmasq enable

  # Stop dnsmasq now in case settings have changed
  /etc/init.d/dnsmasq stop
  # Start dnsmasq now
  /etc/init.d/dnsmasq start

else

  # Disable start on boot
  /etc/init.d/dnsmasq disable
  # Stop dnsmasq now
  /etc/init.d/dnsmasq stop
fi

#---------------------------------------------

# Set up Prosody 
if [ -d /etc/prosody/data ]; then
	chown -R prosody:prosody /etc/prosody/data
fi


